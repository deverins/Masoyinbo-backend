{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".", 
    "outDir": "./dist", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
     "moduleResolution": "node",
     "sourceMap": true,
  },
  "include": [
    "**/*.ts" 
  ],
  "exclude": [
    "node_modules",
    "build",
    "tests/**/*",      
    "**/*.test.ts",    
    "db/dbConnectionTest.ts" 
  ]

}
